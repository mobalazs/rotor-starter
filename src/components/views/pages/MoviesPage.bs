import "BasePage.bs"

namespace ViewModels
    class MoviesPage extends ViewModels.BasePage

        override function template() as object
            return {
                nodeType: "Group",
                children: [
                    {
                        id: "pageTitle",
                        nodeType: "Label",
                        fields: {
                            text: "@l10n.pages.movies.title",
                            translation: [UI.safeArea.x, UI.safeArea.y],
                            color: UI.colors.onBackground
                        },
                        fontStyle: UI.typography.displaySmall_aa
                    },
                    {
                        id: "pageContent",
                        nodeType: "Label",
                        fields: {
                            text: "@l10n.pages.movies.content",
                            translation: [UI.safeArea.x, UI.safeArea.y + 80],
                            color: UI.colors.onBackground
                        },
                        fontStyle: UI.typography.bodyLarge_aa
                    }
                ]
            }
        end function

        override sub onCreateView()
            Utils.BasicLogger("[MoviesPage] Created")
        end sub

        override sub onDestroyView()
            Utils.BasicLogger("[MoviesPage] Destroyed")
        end sub
    end class
end namespace
