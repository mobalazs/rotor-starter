<?xml version="1.0" encoding="utf-8" ?>

<component name="SimpleRowListItem" extends="Group">

    <interface>
        <field id="itemContent" type="node" onChange="showcontent"/>
        <field id="focusPercent" type="float" onChange="showfocus"/>
        <field id="rowFocusPercent" type="float" onChange="showrowfocus"/>
    </interface>

    <script type="text/brightscript" uri="SimpleRowListItem.bs" />

    <children>

        <Poster
            id="itemPoster"
            translation="[0, 0]"
            width="200"
            height="300"
            scaleRotateCenter="[100.0, 150.0]">

            <Rectangle
                id="itemMask"
                color="0x000000FF"
                opacity="0.75"
                width="200"
                height="300"
                scaleRotateCenter="[100.0, 150.0]"/>

        </Poster>

        <Rectangle
            id="labelBackground"
            translation="[0, 250]"
            color="0x000000FF"
            opacity="0.0"
            width="200"
            height="50"/>

        <ScrollingLabel
            id="itemLabel"
            translation="[10, 258]"
            horizAlign="left"
            vertAlign="center"
            font = "font:SmallestSystemFont"
            maxWidth="180"
            height="40"
            repeatCount="-1"
            opacity="0.0"/>

    </children>

</component>
