{
	"rootDir": "src",
	"stagingDir": "dist",

	"bs_const": {
		"debug": true,
		"unittest": false
	},

	"createPackage": false,
	"emitDefinitions": true,
	"sourceMap": true,
	"autoImportComponentScript": true,

	"plugins": [
		"@rokucommunity/bslint",
		"./scripts/manifestPlugin.js"
	],

	"files": [
		"source/**/*",
		"components/**/*",
		"manifest",
		"assets/**/*",
		{
			"src": "../mockups/**/*",
			"dest": "mockups/"
		},
		"!source/libs/**/*.spec.bs"
	],

	"diagnosticFilters": [
		{
			"src": "**/roku_modules/**/*.*"
		},
		{
			"src": "**/*.spec.bs"
		}
	]
}
