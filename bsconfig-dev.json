{
    "extends": "bsconfig.json",
    "files": [
        "source/**/*",
        "components/**/*",
        "manifest",
        "assets/**/*",
        {
            "src": "../mockups/**/*",
            "dest": "mockups/"
        },
        "!**/*.spec.bs"
    ],

    "bs_const": {
        "debug": true
    },

    "createPackage": false,
    "emitDefinitions": true,
    "sourceMap": true,

    "require": ["ts-node/register"],
    "plugins": [
        "@rokucommunity/bslint"
    ],
    "diagnosticFilters": [
        {
            "src": "**/roku_modules/**/*.*"
            },{
            "src": "**/debug/rale/**/*.*"
        }
    ]
}
